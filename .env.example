# TandaPay - Configuración de Entorno

# Servidor
PORT=3001
NODE_ENV=development

# Base de Datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=Cuatecon23+
DB_NAME=inter_tand

# Interledger Open Payments (Para producción)
WALLET_ADDRESS_URL=https://ilp.example.com
PRIVATE_KEY=your-private-key-here
KEY_ID=your-key-id-here
TANDAPAY_WALLET=$ilp.tandapay.com/main

# Configuración de Demo
DEMO_MODE=true
SIMULATION_SUCCESS_RATE=0.9

# Seguridad
JWT_SECRET=your-jwt-secret-here
BCRYPT_ROUNDS=10

# Pagos automáticos
AUTO_PAYMENTS_ENABLED=true
PAYMENT_REMINDER_DAYS=3

# Notificaciones (para implementación futura)
EMAIL_SERVICE=disabled
SMS_SERVICE=disabled

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/tandapay.log
